{
    "name": "feature-ninja/cva",
    "type": "library",
    "description": "Class variance authority implementation in php",
    "keywords": [
        "feature-ninja",
        "cva",
        "class",
        "variance",
        "authority"
    ],
    "homepage": "https://github.com/feature-ninja/cva",
    "license": "MIT",
    "authors": [
        {
            "name": "Roj Vroemen",
            "email": "roj@feature.ninja",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.2"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.21.1",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^10.3.2"
    },
    "autoload": {
        "files": [
            "src/helpers.php"
        ],
        "psr-4": {
            "FeatureNinja\\Cva\\": "src/"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage",
        "format": "vendor/bin/php-cs-fixer fix --config=.php-cs-fixer.dist.php --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
